<div class="card-list-container py-5">
   <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
      <div class="row">
        <div class="col-10">
          <%= link_to admin_user_path(@user.id) do %>
          <p>投稿者：<%= @post.user.name %></p>
          <% end %>
          <p>タイトル：<%= @post.title %></p>
          <% if @post.images.attached? %>
            <% @post.images.each do |image| %>
              <%= image_tag image.variant(resize: '200x200') %>
            <% end %>
          <% end %>
          <p>種類：<%= @post.kinds %></p>
          <p>年齢：<%= @post.age %></p>
          <p>性別：<%= @post.gender %></p>
          <p>募集地域：<%= @post.recruitment_area %></p>
          <p>毛並み：
            <% if @post.post_coats.present? %>
              <% @post.coats.each do |coat| %>
                <%= coat.name %>
              <% end %>
            <% end %>
          </p>
          <p>健康状態：<%= @post.health_condition %></p>
          <p>ワクチン接種済み：<%= @post.vaccination_text %></p>
          <p>不妊治療：<%= @post.infertility_treatment_text %></p>
          <p>特徴：<%= @post.features %></p>
          <p>譲渡条件：<%= @post.transfer_condition %></p>
          <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
          <%= link_to "削除", admin_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </div>
      </div>
    </div>
  </div>
</div>