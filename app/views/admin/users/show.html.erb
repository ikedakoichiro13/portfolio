<h3><%= @user.name %></h3>

<% @posts.each do |post| %>
<div>
  <%= link_to admin_post_path(post.id) do %>
  <% if post.images.attached? %>
    <% post.images.each do |image| %>
      <%= image_tag image.variant(resize_to_limit: [200, 200]) %>
    <% end %>
  <% end %>
  <p><%= post.title %></p>
  <% end %>
</div>
<% end %>