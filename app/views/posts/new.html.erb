<h1>投稿フォーム</h1>
<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
    <%= f.text_field :title %>

  <h4>画像</h4>
    <%= f.file_field :images, multiple: true %>

  <h4>種類</h4>
    <%= f.text_field :kinds, placeholder: "例:柴犬、雑種、不明" %>

  <h4>年齢</h4>
    <%= f.text_field :age, placeholder: "例:◯歳◯ヶ月" %>

  <h4>性別</h4>
  <div class="field">
    <%= f.label :gender, "♂" %>
    <%= f.radio_button :gender, "male" %>

    <%= f.label :gender, "♀" %>
    <%= f.radio_button :gender, "female" %>
  </div>
  <h4>募集地域</h4>
    <%= f.text_field :recruitment_area, placeholder: "例:〇〇県〇〇市" %>

  <h4>毛並み</h4>
      <%= f.select :coat, options_for_select(['もふもふ', 'さらさら', '硬い', '長い', '短い'], :multiple => true) %>

  <h4>特徴</h4>
    <%= f.text_field :features, placeholder: "例:人懐っこくて元気です！" %>

  <h4>譲渡条件</h4>
    <%= f.text_field :transfer_condition, placeholder: "例:近くにお住まいの方" %>

  <h4>健康状態</h4>
    <%= f.text_field :health_condition, placeholder: "例:特に悪いところはなく至って健康です。"%>

  <h4>ワクチン接種済み</h4>
  <div class="field">
    <%= f.label :vaccination, "接種済み" %>
    <%= f.radio_button :vaccination, true %>

    <%= f.label :vaccination, "接種済みでない" %>
    <%= f.radio_button :vaccination, false %>
  </div>

  <h4>不妊治療</h4>
  <div class="field">
    <%= f.label :infertility_treatment, "治療済み" %>
    <%= f.radio_button :infertility_treatment, true %>

    <%= f.label :infertility_treatment, "治療済みでない" %>
    <%= f.radio_button :infertility_treatment, false %>

    <%= f.submit '投稿' %>
<% end %>